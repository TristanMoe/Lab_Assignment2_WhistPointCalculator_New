@{
    ViewData["Title"] = "Home Page";
}

@model HomeViewModel

<div class="text-center">
    <h1 class="display-4">Welcome to the Whist Point Calculator</h1>
</div>

<p>Current Players:</p>
<ol>
    @foreach (var player in Model.Players)
    {
        <li>@(player.FirstName) @(player.LastName)</li>
    }
</ol>
<a asp-action="Index" asp-controller="Players">Edit/Add players</a>
<form asp-action="StartNewGame">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="GameName"></label>
        <input asp-for="GameName" class="form-control" />
        <span asp-validation-for="GameName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Start a new game here" class="btn"/>
    </div>
</form>