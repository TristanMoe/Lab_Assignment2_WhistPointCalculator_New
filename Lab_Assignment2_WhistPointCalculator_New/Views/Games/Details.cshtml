@model Lab_Assignment2_WhistPointCalculator.Games

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Games</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ended)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ended)
        </dd>
       


    </dl>
    
    <dl>
        @foreach (var player in Model.GamePlayers)
        {
            <dt>@player.Player.FirstName @player.Player.LastName</dt>
            <dd>Points: @player.Points</dd>
                                       
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.GamesId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
